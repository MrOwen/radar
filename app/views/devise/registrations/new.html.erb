<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="form_header"><%= t :new_staff %></div>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :organization %><br />
    <%= f.collection_select( :staff_organizations, @organizations, :id, :display_name, {:selected => 1}) %>
  </div>
  <div class="field">
    <p><%= f.label :access_level %><br />
      <%= f.collection_select( :access_level_id, @access_levels, :id, :display_name ) %></p>
  </div>
  <div class="field">
    <%= f.label :area %><br />
    <%= f.collection_select( :staff_areas, Area.order(:name), :id, :name, {:selected => 1}) %>
  </div>

  <br />
  <div class="actions">
    <%= f.submit %>
  </div>
  <br />
<% end %>

<%= render :partial => "devise/shared/links" %>