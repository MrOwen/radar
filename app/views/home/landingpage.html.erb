<h1>Radar</h1>
<div id = "user_nav">
	<% if staff_signed_in? %>
		
	<% else %>
		<%= link_to "Sign In", new_staff_session_path %>
	<% end %>
</div>

<% if staff_signed_in? %>
	<ul>
		<li>Students
			<ul>
				<% if current_staff.access_level > Authorize.ra_access_level %>
					<li><a href = "/students">List Students</a></li>
				<% end %>
				<li><a href = "/students/search_students">Search Students</a></li>
			</ul>
		</li>
		<li>Incident Reports
			<ul>
				<% if current_staff.access_level != Authorize.admin_assistant_access_level%>
					<li><a href = "/incident_reports/new_report">New Incident Report</a></li>
				<% end %>
				<% if current_staff.access_level > Authorize.ra_access_level %>
					<li><a href = "/incident_reports">List Incident Reports</a></li>
					<li><a href = "/reports_query/search">Search Incident Reports</a></li>
				<% end %>
			</ul>
		</li>
		<li>Maintenance Requests
			<ul>
				<% if current_staff.access_level != Authorize.admin_assistant_access_level%>
					<li>New Maintenence Request</li>
				<% end %>
				<% if current_staff.access_level > Authorize.ra_access_level %>
					<li>List Maintenence Requests</li>
					<li>Search Maintenence Requests</li>
				<% end %>
			</ul>
		</li>
		<li>Duty Logs
			<ul>
				<% if current_staff.access_level != Authorize.admin_assistant_access_level%>
					<li>New Duty Log</li>
				<% end %>
				<% if current_staff.access_level > Authorize.ra_access_level %>
					<li>List Duty Logs</li>
					<li>Search Duty Logs</li>
				<% end %>
			</ul>
		</li>
	</ul>
	
	<% end %>




<% if staff_signed_in? %>
<hr >
	<h3><%= current_staff.first_name %> <%= current_staff.last_name %>'s Unsubmitted Reports</h3>
	<% if @unsubmitted.length > 0 %>
		<table>
			<%= render :partial => "/incident_reports/incident_report_table_row_labels" %>
		
			<% num_rows = 0 %>
			<% @unsubmitted.each do |report| %>
				<%= render :partial => "/incident_reports/incident_report_table_row", :locals => { :incident_report => report, :num_rows => num_rows } %>
			<% end %>
		</table>
	<% else %>
		<p> No Unsubmitted Reports </p>
	<% end %>
	
	<% if Authorize.admin_assistant_authorize(current_staff) %>
		<hr >
		<h3>Recent Reports</h3>
		<% if @recent.length > 0 %>
			<table>
				<%= render :partial => "/incident_reports/incident_report_table_row_labels" %>
				
				<% num_rows = 0 %>
				<% @recent.each do |report| %>
					<%= render :partial => "/incident_reports/incident_report_table_row", :locals => { :incident_report => report, :num_rows => num_rows } %>
				<% end %>
			</table>
			<% else %>
				<p> No Recent Reports </p>
			<% end %>
	<% end %>	
<% end %>
