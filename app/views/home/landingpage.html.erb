<h1>Radar</h1>
<div id = "user_nav">
	<% if staff_signed_in? %>
		
	<% else %>
		<%= link_to "Sign Up", new_staff_registration_path %> or <%= link_to "Sign In", new_staff_session_path %>
	<% end %>
</div>

<% if staff_signed_in? %>
	<% if Authorize.admin_assistant_authorize(current_staff) %>
		<p><a href = "http://localhost:3000/students">Students</a></p>
		<p><a href = "http://localhost:3000/reports">Reports</a></p>
	<% end %>
	<p><a href = "http://localhost:3000/incident_reports/new_report">New Incident Report</a></p>
<% end %>

<% if staff_signed_in? %>

  <%= link_to "/search?returnUrl=#{request.fullpath} ", { :method => :get} do %>
  Search Students
  <% end %>
<% end %>

<hr >
<% if staff_signed_in? %>
	<h3><%= current_staff.first_name %> <%= current_staff.last_name %>'s Unsubmitted Reports</h3>
	<% if @unsubmitted.length > 0 %>
		<table>
			<%= render :partial => "/incident_reports/incident_report_table_row_labels" %>
		
			<% num_rows = 0 %>
			<% @unsubmitted.each do |report| %>
				<%= render :partial => "/incident_reports/incident_report_table_row", :locals => { :incident_report => report, :num_rows => num_rows } %>
			<% end %>
		</table>
	<% else %>
		<p> No Unsubmitted Reports </p>
	<% end %>
	
	<% if Authorize.admin_assistant_authorize(current_staff) %>
		<hr >
		<h3>Recent Reports</h3>
		<% if @recent.length > 0 %>
			<table>
				<%= render :partial => "/incident_reports/incident_report_table_row_labels" %>
				
				<% num_rows = 0 %>
				<% @unsubmitted.each do |report| %>
					<%= render :partial => "/incident_reports/incident_report_table_row", :locals => { :incident_report => report, :num_rows => num_rows } %>
				<% end %>
			</table>
			<% else %>
				<p> No Recent Reports </p>
			<% end %>
	<% end %>	
<% end %>
