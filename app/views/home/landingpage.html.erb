<div id="inside_container" class="inside_container">
<div id = "user_nav">
	<% if staff_signed_in? %>
		
	<% else %>
		<%= link_to "Sign In", new_staff_session_path %>
	<% end %>



</div>
<div id = "inside_container" class="inside_container">

<% if staff_signed_in? %>

	<h3><%= current_staff.first_name %> <%= current_staff.last_name %>'s Unsubmitted Reports</h3>
	<% if @unsubmitted.length > 0 %>
	<% num_rows = 0 %>
			<%= render :partial => "reports/index_generic", :locals => { :reports => @unsubmitted, :num_rows=>num_rows } %>
	<% else %>
		<p> No Unsubmitted Reports </p>
	<% end %>
	
	<% if Authorize.admin_assistant_authorize(current_staff) %>
		<hr >
		<h3>Recent Reports</h3>
		<% if @recent.length > 0 %>
		<% num_rows = 0 %>
			<table>
				<%= render :partial => "reports/index_generic", :locals => { :reports => @recent, :num_rows=>num_rows } %>
		</table>
			<% else %>
				<p> No Recent Reports </p>
			<% end %>
	<% end %>	
<% end %>
</div>
</div>