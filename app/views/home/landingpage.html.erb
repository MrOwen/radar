<div id="inside_container" class="inside_container">
  <div id = "user_nav">
    <% if staff_signed_in? %>

    <% else %>
      <%= link_to "Sign In", new_staff_session_path %>
    <% end %>



  </div>
  <div id = "inside_container" class="inside_container">

    <% if staff_signed_in? %>

      <h3><%= current_staff.name %>'s Unsubmitted Reports</h3>
      <% if @unsubmitted.length > 0 %>
        <div id = "unsubmitted">
          <%= render :partial => "reports/report_table_row", :locals => { :reports => @unsubmitted, :num_rows=>0 } %>
        </div>
      <% else %>
        <div id = "unsubmitted">
          <p> No Unsubmitted Reports </p>
        </div>
      <% end %>

      <hr />
      <h3>Recent Reports</h3>
      <% if @recent.length > 0 %>
        <div id= "recent">
          <%= render :partial => "reports/report_table_row", :locals => { :reports => @recent, :num_rows=>0 } %>
        </div>
      <% else %>
        <div id = "recent">
          <p> No Recent Reports </p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>