
<div id="WebApp">
    <div id="iHeader" style="background-color: #b22222">
        <a href="#" id="waBackButton">Back</a>
        <span id="waHeadTitle">Incident Report</span>
    </div>
    <div id="iGroup">
        <div class="iLayer" id="waHome" title="Home">
            <form action="/incident_reports" method="POST">
                <div class="iPanel">
                    <fieldset>
                    <Legend>
                        Showing Incident Report #<%= @report.id %>
                    </Legend>
                    <ul>
                        
                        <li>
                            Submitted:<span><%= @report.submitted %></span>
                        </li>
                        <li>
                            Approach Time:<span><%= @report.approach_time.to_s(:time_only)%></span>
                        </li>
                        <li>
                            Building ID:<span><%= @report.building.name %></span>
                        </li>
                        <li>
                            Room Number:<span><%= @report.room_number %></span>
                        </li>
                        
                    </ul>
                    <Legend>
                        Annotation:
                    </Legend>
                    <ul>
                        <li>
                           <%=@report.annotation_text %>
                        </li>
                    </ul>
                   
                    <% @report.report_participant_relationships.sort! { |a, b|  a.participant.last_name <=> b.participant.last_name } %>
                    
                    <Legend>
                        Student infractions:
                    </Legend>
					<ul>
						
					<% @report.report_participant_relationships.each do |b| %>
                    <% if b.participant.id != @currentParticipantID %>
					
                    <% @currentParticipantID = b.participant.id %>
					
					<li>
                    <Legend  style="color: #000000">Participant:</Legend>
					
				<Legend style="color: #b22222">
                <% if b.participant.type == "Student" %>
                            
                            <%= b.participant.first_name %> <%= b.participant.last_name %></a>
                       
                        <% else %>
                        
                       <%= b.participant.first_name %> <%= b.participant.last_name %></a>
                    
					
					
                    <% end %>
					</Legend>
					<br/>
                <Legend  style="color: #000000">
                    Infractions:
                </Legend>
				
                    <% end %>
				
					<Legend style="color: #b22222">
					<%= b.relationship_to_report.description %>
					</Legend>
					
                    <% end %>
					</li>
</ul>
                <ul>
                    <li>
                        Created:<span><%= @report.created_at.to_s(:date_only) %></span>
                    </li>
                </ul>
                <a href='unsubmitted_reports' class="iPush iBClassic" style="width:100%">View Reports</a>
            </fieldset>
        </div>
        </form>
    </div>
</div>
</div>
