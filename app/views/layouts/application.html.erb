<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "RADAR" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= stylesheet_link_tag "radar" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
    <%= javascript_include_tag 'jquery-1.4.4.min.js', 'jquery-ui-1.8.9.custom.min.js', 'autocomplete-rails.js',  'CSJSRequestObject.js', 'suckertree.js'  %>
    <%= javascript_tag '$j = jQuery.noConflict();' %>
    <%= stylesheet_link_tag 'jquery-ui-1.8.9.custom.css' %>
    <link href='/images/favicon.ico' rel='shortcut icon' type='image/x-icon' />

  </head>
   
  <body>
  <% if staff_signed_in? %>
	<div id="toolbar"> 
		<table border="0">
		<tr>
			<td width = "0%"><%=link_to image_tag("StMarysLogo.png", :target=> "_blank", :title=>"Radar Home"), "http://www.smumn.edu"%> </td>
			
			<td style = "width: 150px;">
			<% if on_duty == true %>
				<div id= "duty_button">
					<%= render :partial => "shifts/go_off_dutybutton" %>
				</div>
			<% else %>
				<div id= "duty_button">
					<%= render :partial => "shifts/go_on_dutybutton" %>
				</div>
			<% end %></td>
			
			<td style = "width: 170px;">
			
			<div id = "round_button">
			<% if on_duty == true %>
				<% if on_round == true %>					
						<%= render :partial => "rounds/go_off_roundbutton" %>					
				<% else %>					
						<%= render :partial => "rounds/go_on_roundbutton" %>					
				<% end %>
			<% end %></div></td>			
			
			<td width = "70%", nowrap><p align="right"><b>Hi, <%= current_staff.first_name %> <%= current_staff.last_name %> | <%= link_to "Sign Out", destroy_staff_session_path %></b></p></td>
			<% if current_staff.access_level > Authorize.ra_access_level %>
				<td width = "0%"><%=link_to image_tag("customize2.png", :size=> "35x35", :title=>"Preferences"), "/notification_preferences" %> </td>
			<% end %>
		</tr>
		</table>    
	</div> 	
	

	<% end %>

    <div id="container">
<div id="inside_container" class="inside_container">

      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
	  </div>

<div id="footer" class="footer"><br>
&nbsp;&copy; 2011 &nbsp;&#149;&nbsp; Created by Saint Mary's University of Minnesota.<br><br></div>	  

    </div>
		

  </body>
</html>
