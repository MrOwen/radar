<div id="inside_container" class="inside_container"><h1>Listing Relationships to Reports</h1>

<table>
  <tr>
  <th>R to R ID</th>  
  <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @relationship_to_reports.each do |relationship| %>
  <% if @numRows == 0 %>
    <% @numRows = @numRows + 1 %>
    <tr class="shaded">
  <% else %>
    <% @numRows = 0 %> 
    <tr>
  <% end %>
    <td><%= relationship.id %></td>
    <td><%= relationship.description %></td>
    <td><%= link_to 'Show', relationship %></td>
    <td><%= link_to 'Edit', edit_relationship_to_report_path(relationship) %></td>
    <td><%= link_to 'Destroy', relationship, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Relationship to Report', new_relationship_to_report_path %>
</div>