<%= form_for(@reported_infraction) do |f| %>
  <% if @reported_infraction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@reported_infraction.errors.count, "error") %> prohibited this reported_infraction from being saved:</h2>

      <ul>
      <% @reported_infraction.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :integer %><br />
    <%= f.text_field :integer %>
  </div>
  <div class="field">
    <%= f.label :integer %><br />
    <%= f.text_field :integer %>
  </div>
  <div class="field">
    <%= f.label :integer %><br />
    <%= f.text_field :integer %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
