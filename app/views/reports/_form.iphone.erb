
<div class="iPanel">
        <%= render :partial => "search/autocomplete_full_name", :locals => { :target => "/reports/add_participant" } %>
    </div>
     <%= form_for(@report) do |f| %>
        <div id="iGroup">
		  
            <div class="iLayer" id="waIncidentReport" title="Incident Report">
                <div class="iPanel">
                    <div id="s-i-form">
                        <% @report.participant_ids.each  do |pid| %>
							<%=render( :partial => "reports/participant_in_report", :locals => { :report => @report, :participant => Participant.find(pid) })%>
                        <% end %>
                    </div>
                    <fieldset>
					  
							<legend></legend>
							<ul  class='iArrow'  id="common-reasons-link"  style="display:none;" ><li>
								<a href = "#_CommonInfractions"><%= t "#{params[:controller]}.common_reasons" %></a>
							</li></ul>
						
                        <legend>
                            <%= t "building" %>
                        </legend>
                        <ul>
                        	
                            <li class="iRadio" value="autoback" onclick="javascript:hideDiv('searchform')">
								<span id="blabel"><%=@report.building.name%></span>
                                Select Building<% Building.find(:all).each do |b| %>
                                <label>
                                    <input type="radio" name="report[building_id]" value="<%= b.id %>" onclick="javascript:displayBuilding('blabel','<%=b.name%>')"<%if @report.building_id == b.id %> checked="checked"<% end %>/><%= b.name %>
                                </label><% end %>
								
                            </li>
							
                        </ul>
						
                        <legend>
                            <%= t "location" %>
                        </legend>
                        <ul>
                            <li>
                                <input type="text" name="report[room_number]" placeholder="Specific Location" value="<%=@report.room_number%>" />
                            </li>
                        </ul>
						<legend>
                              <%= t "annotation" %>
                        </legend>
                        <ul>
                            <li>
                                <%= text_area(:report, :annotation,  :cols=> "60", :rows => "4", :value=> @report.annotation_text) %>
                            </li>
                        </ul>
                        <legend>
                            Time: <%=@report.approach_time%>
                        </legend>
						<% if @report.can_submit_from_mobile? %>
						  <input id="submit_submit" name="report[submitted]" type="submit" value="Submit" class="iPush iBClassic" style="width:100%"/>
                        <%else %>
						  <input id="save_submit" name="save_submit" type="submit" value="Save" class="iPush iBClassic" style="width:100%"/>
						<% end %>
                    </fieldset>
                </div>
            </div>
            <div id="s-i-checkbox">
                <% @report.participant_ids.each  do |pid| %>
                 <%= render :partial=> "reports/report_participant_relationship_checklist", :locals => { :report => @report, :participant => Participant.find(pid) } %>
                <% end %>
            </div>
			<div class="iLayer" id="waCommonInfractions" >
				<a href="#_IncidentReport" rel="back">Back</a>
				<div class="iPanel">
					<%= render :partial=>"reports/report_common_relationship_checklist", :locals => { :report => @report } %>
				</div>
			</div>
        </div>
    <% end %>



