<%= render :partial => "reports/fields/error_check" %>

<%= form_for(@report) do |f| %>

  <div id="s-i-form">
    <%= render :partial=> "reports/participants_in_report", :locals => { :width => 3, :report => @report, :participants => Participant.where(:id => @report.participant_ids).order(:last_name) } %>
  </div>

  <% common_reasons_state = @report.participant_ids.size > 1 ? "block" : "none" %>
  <% content_tag :div, :id=>"common-reasons-container", :style=>"display:#{common_reasons_state}" do -%>
    <%= render :partial => "reports/report_common_relationship_checklist" , :locals => { :report => @report } %>
  <% end -%>

  <%= render :partial => "reports/fields/annotation" %>
  <%= render :partial => "reports/fields/building", :locals => { :f => f} %>
  <%= render :partial => "reports/fields/specific_location", :locals => { :f => f} %>
  <%= render :partial => "reports/fields/approach_time", :locals => { :f => f} %>
  <%= render :partial => "reports/fields/secondary_submitters" %>
  <div class="actions">
    <%= render :partial => "reports/fields/save_button" %>
    <%= render :partial => "reports/fields/submit_button" %>
  </div>

<% end %>

