<% logger.debug("inside particiapnt_in_report participant is #{participant.first_name} id is #{participant.id}") %>
<div class="p-relationship" id=<%= "'p-in-report-#{participant.id}'" %> >
      	<table>
      		<tr>
      			<td style="vertical-align: top;">
      				<%= link_to image_tag(participant.getThumbnailUrl, :style=>"align:left;", :border=> 0), "#", 
  		    		:onclick => "Element.toggle('details_div_#{participant.id}'); return false;"  %>
      			</td>
				<td style="vertical-align: top;">
					 <%= "#{participant.first_name} #{participant.last_name}" %>
      				 <%= link_to image_tag("/images/remove_icon.png", :border=>0), { :controller => "reports",   
         				:action => 'remove_participant', :id => participant.id }, :remote => true %>
  	  				 <div id="details_div_<%= participant.id %>" style="display: none;" >
  	    			 	<%= render :partial => "participants/participant_details", :locals => { :participant => participant } %>
  	   				 </div>
  	  				 <%= render :partial => "reports/report_participant_relationship_checklist", :locals => { :report => @report, :participant => participant } %>
				</td>
      		</tr>
      	</table>
      		
     
</div>
