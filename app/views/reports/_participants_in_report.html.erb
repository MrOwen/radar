<% num_parts = 0 %>
<table>
  <tr>
    <% participants.each do |participant| %>
      <% if num_parts%width == 0 %>
      </tr>
      <tr>
      <% end %>
      <td style="vertical-align: top;">
        <%=  image_tag(participant.getImageUrl, :style=>"align:left;", :border=> 0, :width => 50) %>
      </td>
      <td style="vertical-align: top;">
        <%= link_to " #{participant.last_name}, #{participant.first_name} #{participant.middle_initial}", participant, :target=>"blank" %>
        <%= link_to image_tag("/images/delete.png", :size=>"15x15", :border=>0, :title=>"Remove"), { :controller => "reports",
          :action => 'remove_participant', :id => participant.id }, :remote => true %>
        <br />
        <%= render :partial => "participants/participant_details", :locals => { :participant => participant } %><br/>
        <%= render :partial => "participants/participant_history", :locals => { :participant => participant, :history => participant.contact_history(@report) } if can? :view_contact_history, participant %>
        <%= render :partial => "reports/report_participant_relationship_checklist", :locals => { :report => @report, :participant => participant } %>
      </td>
      <% num_parts = num_parts + 1 %>
    <% end %>
  </tr>
</table>
