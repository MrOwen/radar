
<% if report.reasons.size > 0 %>

<div class="common-relationship-checklist">

  	<div id="common-reasons">
		<fieldset>
		<ul>
  			<% report.reasons.each do |infraction| %>
  		  		<li><% rf =  remote_function( :update => nil,
											:url => { :controller => 'reports', :action => :update_common_reasons },
											:with => "'report[id]=#{report.id}"  + '&reason=\'+ this.id + \'&checked=\' + this.checked')  %>
					<%= check_box_tag "common_reasons[#{infraction.id}]", 
						infraction.description,
						false ,
						:onclick => "#{rf}",
						:class=>:"iToggle", 
						:title=>"YES|NO" %>
  				    <%= infraction.description %>			 				
  				</li>
  			<% end %>
		</ul>
	
		</fieldset>
  	</div>
</div>
<% end %>
