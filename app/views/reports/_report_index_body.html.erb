<div id="results">

  <% if reports.respond_to?('total_pages') %>
    <div class="digg_pagination">
      <div class="page_info">
        <%= page_entries_info reports %>
      </div>
      <%= will_paginate reports, :container => false %>
    </div>
  <% end %>

  <table >
    <% if reports.length > 0 %>
      <%= render :partial => "reports/report_index_header_linked_labels", :locals => { :reports => all_reports} %>
    <% else %>
      <%= "No Reports Match Your Criteria" %>
    <% end %>
    <% reports.each do |report| %>

      <% if num_rows == 0 %>
        <% num_rows = num_rows + 1 %>
        <tr class="shaded">
        <% else %>
          <% num_rows = 0 %>
        <tr>
        <% end %>
        <td>
          <div class="field"  >
            <%= report.event_date %>
          </div>
        </td>
        <td>
          <div class="field">
            <%= report.event_time %>
          </div>
        </td>
        <td>
          <div class="field">
            <% if can? :edit, report %>
              <%= link_to report.tag, edit_report_path(report), :class => "link-report-viewed-#{current_staff.has_seen?(report)}" %>
            <% elsif can? :show, report %>
              <%= link_to report.tag, report, :class => "link-report-viewed-#{current_staff.has_seen?(report)}" %>
            <% else %>
              <%= "#{report.tag}" %>
            <% end %>
          </div>
        </td>
        <td>
          <div class="field">
            <%= report.staff.last_name rescue unknown %>
          </div>
        </td>
        <td>
          <div class="field">
            <%= report.building_name  %>
          </div>
        </td>
        <td>
          <div class="field">
            <%= report.room_number %>
          </div>
        </td>



        <% if report.forwardable? %>
          <td bgcolor="white" >
            <% if report.forwarded?  %>
              <%= image_tag( "check_mark.jpg", :height=>16, :width=> 16) %>
            <% end %>
          </td>
        <% end %>

        <% if can? :destroy, report %>
          <% if report.type == "MaintenanceReport" %>
            <td id="edit_destroy_link"><%= link_to 'Destroy', report, :confirm => 'Are you sure?', :method => :delete, :id => report if can? :destroy, report %></td>
          <% end %>
        <% end %>

      </tr>
    <% end %>
    </tr>
  </table>
</div>