<% if(type == "edit") %>
<% elsif(type == "search") %>
<% elsif(type == "index") %>
    <% if(part == "header") %>
        <%= link_to "Tag", params.merge(:sort => "tag"), :remote => true %>
    <% elsif(part == "data") %>
        <% if can? :show, report %>
            <%= link_to report.tag, report, :class => "link-report-viewed-#{current_staff.has_seen?(report)}" %>
        <% else %>
            <%= "#{report.tag}" %>
        <% end %>
    <% end %>
<% elsif(type == "show") %>
<% end %>