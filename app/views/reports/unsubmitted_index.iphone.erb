
            <div id="iGroup">
                <div class="iLayer" id="waHome" title="Home">
                    <div class = "iPanel">
					    <% if @reports != nil && @reports.size > 0 %>
                        <fieldset>
                            <Legend>
                                <%= "#{ReportType.find_by_name(@reports.first.type).display_name.pluralize} :" %>
                            </Legend>
                            <br/>
                            <ul class="iArrow">
                                <% @reports.each do |report| %>
                              
                                <li>
                                <%= link_to  "/#{params[:controller]}/#{report.id}/edit"  do %>
										<%= report.tag %>
										<br/>
										<div style="font-size:12px;margin-left:8px" >
									    Date: 
                                        <%= report.event_date %>
										<br/>
                                        Time: 
                                        <%= report.event_time %>
                                        <br/>
                                        Building: 
                                        <%= report.building.name %>
										</div>
                                    <% end %>
                                </li>
								
                                <% end %>
                            </ul>
                        </fieldset>
                        <a href = <%= "/#{params[:controller]}/new" %> class="iPush iBClassic" style="width:100%">New <%= ReportType.find_by_name(@reports.first.type).display_name %></a>
                        <% else %>
								   No reports found
						<% end %>
						<a href = "/home/landingpage" class="iPush iBClassic" style="width:100%">Home</a>
                    </div>
                </div>
            </div>
 
