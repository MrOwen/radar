<h1>Search Results </h1>

<table>
  <%= render :partial => "/incident_reports/incident_report_table_row_labels" %>
  
<% @reports.each do |incident_report| %>
  <% if incident_report.submitted? == true %>
  	<% if @numRows == 0 %>
  		<% @numRows = @numRows + 1 %>
  		<tr class="shaded">
  	<% else %>
  		<% @numRows = 0 %> 
  		<tr>
  	<% end %>
  	<%= render :partial => "/incident_reports/incident_report_table_row", :locals => {:num_rows => @numRows, :incident_report => incident_report}%>
  <% end %>
<% end %>

</table>
<p>
	Showing <%= @num_reports %> of <%= @num_reports %> results.

