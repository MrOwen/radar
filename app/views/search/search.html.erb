<h1>Student Search</h1>
<%= javascript_include_tag 'jquery-1.4.4.min.js', 'jquery-ui-1.8.9.custom.min.js', 'autocomplete-rails.js', 'rails.js'  %>
<script type="text/javascript">
function addtext(what){
	if (document.createTextNode){
		var mytext=document.createTextNode(what)
		document.getElementById("found").appendChild(mytext)
		var theNewParagraph = document.createElement('p');
		document.getElementById("found").appendChild(theNewParagraph);
	}
}
</script>

<div id="found"></div>

<%= form_tag do %>

  <%=text_field_tag 'first_name', '', :autocomplete => search_autocomplete_student_first_name_path %>
  <input onclick="addtext(first_name.value); first_name.value = '';" type="button" value="Add" />


  <% end %>

