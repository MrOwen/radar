<table>
  <tr>
    <th><%= link_to "Date", :sort => "date" %></th>
    <th><%= link_to "Time", :sort => "date" %></th>
    <th><%= link_to "Area", :sort => "area" %></th>
    <th><%= link_to "Submitter", :sort => "submitter" %></th>
	<th></th>
  </tr>
  
<% shifts.each do |shift| %>
 
  	<% if @numRows == 0 %>
  		<% @numRows = @numRows + 1 %>
  		<tr class="shaded">
  	<% else %>
  		<% @numRows = 0 %> 
  		<tr>
  	<% end %>

	<td><%= shift.start_date %></td>
  	<td><%= shift.time rescue "In Progress" %></td>
  	<td><%= shift.area.name rescue "Unknown" %></td>
  	<td><%= shift.staff.last_name %>, <%= shift.staff.first_name %></td>
  	<td><%= link_to 'View Duty Log', :controller => "shifts", :action => "duty_log", :id => shift %></td> 
  	</tr>

<% end %>
</table>

