<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Student ID Number:<br />
    <%= f.text_field :student_id %>
  </div>
  <div class="field">
    <%= f.label :first_name %>:<br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %>:<br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
	<%= f.label :birthday, "Date of Birth" %>:<br />
	<%= f.date_select :birthday, :start_year => 1940, :end_year => Time.now.year, :order => [:month, :day, :year] %>
  </div>
  <div class="field">
	<%= f.label :classification, "Grade" %>:<br />
	<%= f.select :classification, options_for_select(["","Freshman", "Sophomore", "Junior", "Senior"],@student.classification)%>
	</div>
  <div class="field">
    Building:<br />
    <% res_halls = Building.where(:id => Building.unspecified..Building.end_of_res_hall_id) %>
	<%= f.select :building_id, options_from_collection_for_select(res_halls, 'id', 'name', "#{@student.building_id}")%>
  </div>
  <div class="field">
    <%= f.label :room_number %>:<br />
    <%= f.text_field :room_number %>
  </div>

  <div class="field">
    <%= f.label :home_phone %>:<br />
    <%= f.text_field :home_phone %>
  </div>
     <div class="field">
    <%= f.label :cell_phone %>:<br />
    <%= f.text_field :cell_phone %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
