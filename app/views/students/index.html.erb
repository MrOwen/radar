<h1>Listing students</h1>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Room Number</th>
    <th>Building</th>
    <th>Age</th>
    <th>Affiliation</th>
    <th>Photo ID</th>
    <th>Home Phone</th>
    <th>Cell Phone</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @students.each do |student| %>
  <tr>
    <td><%= student.first_name %></td>
    <td><%= student.last_name %></td>
    <td><%= student.room_number %></td>
    <td><%= student.building.name %></td>
    <td><%= student.age %></td>
    <td><%= student.affiliation %></td>
    <td><%= student.photo_id %></td>
    <td><%= student.home_phone %></td>
    <td><%= student.cell_phone %></td>
    
    
    <td> </td>
    <td><%= link_to 'Show', student %></td>
    <td><%= link_to 'Edit', edit_student_path(student) %></td>
    <td><%= link_to 'Destroy', student, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

