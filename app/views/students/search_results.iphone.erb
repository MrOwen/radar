<div id="iGroup">
  <div class="iLayer" id="waSearchResults" title="Search Results">
    <a href="#" href="/students/search_students"  style="{-webkit-border-image: url(Img/button-back-touch.png) 0 10 0 15}" >Back</a>
    <div class="iPanel">

		<%= form_tag ("/students/use_search_results_to_create_new_report")  do -%>
			<fieldset>
			
				<h1>Search Results</h1>
				
				<%= submit_tag "Add To New Incident Report" %>
				<%= submit_tag "Add To New Maintenance Request" %>
			
				<ul>
				<% @students.each do |student| %>
					<li >
					
					<% content_tag :input,  :type=>"checkbox", :name=>"participants[#{student.id}]", :id=>"participants[#{student.id}]", :class=>"iToggle" do -%><% end -%>		
					<div style="position:relative;left:60px;top:-10px;">
					   <%= content_tag :a, :href=>"#_StudentDetails_#{student.id}" do -%>
							<%=image_tag(student.getImageUrl, :border=> 0, :width=>30) %><%= "#{student.name}" %>
						<% end -%>
					</div>
					</li>
				<% end %>
				</ul>
			</fieldset>

		<% end -%>
	</div>  
  </div>
  <% @students.each do |student| %>
	    
	  <%= content_tag :div, :class => "iLayer" , :id => "waStudentDetails_#{student.id}" do -%>
	        <a href="#"  id="waBackButton" rel="back" >Back</a> 
			<div    align="center" >
				<% content_tag :img,   :src=>"#{student.getImageUrl}" do -%><br/><% end -%>
				<%= "#{student.name}" %>
			</div>
		
         
		<fieldset>
			<%=  render :partial=>"participants/participant_details", :locals=> { :participant => student } %>
		</fieldset>
     <% end -%>
  <% end %>
</div>