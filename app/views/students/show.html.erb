<h1><%= "#{@student.first_name} #{@student.last_name}" %></h1>
<p id="notice"><%= notice %></p>

<%if staff_signed_in? %>
	<%if current_staff.access_level > Authorize.ra_access_level %>
<p>
  <b>Student ID:</b>
  <%= @student.student_id %>
</p>
	<% end %>
<% end %>	

<p>
  <b>Residence:</b>
  <%= "#{@student.room_number} #{@student.building.name}" %>
</p>

<p>
  <b>Phone Extension:</b>
  <%= @student.extension %>
</p>
<p>
  <b>Age:</b>
  <%= @student.getAge(@student.birthday) %>
</p>

<p>
  <b>Birthday:</b>
  <%= @student.birthday != nil ? @student.birthday.strftime("%m/%d/%Y") : "" %>
</p>

<%if staff_signed_in? %>
	<%if current_staff.access_level > Authorize.ra_access_level %>

<p>
  <b>Home Phone:</b>
  <%= @student.home_phone %>
</p>
<p>
  <b>Cell Phone:</b>
  <%= @student.cell_phone %>
</p>
<p>
  <b>Emergency Contact:</b>
  <%= @student.emContact %>
</p>
	

	<% end %>
<% end %>

<p>
	<%= link_to image_tag(@student.getImageUrl, :border=>0) %>
</p>






 

<%= link_to 'Edit', edit_student_path(@student) %> |
<%= link_to 'Back', students_path %>
