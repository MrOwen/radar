<% task_assignments.each do |assignment| %>

  <% if num_rows == 0 %>
    <% num_rows = num_rows + 1 %>
    <tr class="shaded">
    <% else %>
      <% num_rows = 0 %>
    <tr>
    <% end %>

    <td><%= assignment.task.title rescue 'Task Deleted' %></td>
    <td><%= assignment.task.note rescue '' %></td>
    <td><%= assignment.due_time %></td>
    <td><%= assignment.done_string %></td>
    <td><%= assignment.done_time %></td>
  </tr>
<% end %>
</tr>