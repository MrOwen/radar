<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
  	<%= f.label :note %><br />
    <%= f.text_field :note %>
  </div>
  <div class="field">
  	<%= f.label :area %><br />
  	<%= f.collection_select( :area_id, Area.order(:name), :id, :name, {:selected => 1}) %>
  </div>
  <div class="field">
  <b>Date Range</b><br />
  	&nbsp &nbsp &nbsp From:
   	<%= f.date_select :start_date %><br />
    &nbsp &nbsp &nbsp To:
    <%= f.date_select :end_date %><br />
    &nbsp &nbsp &nbsp<%= f.check_box :expires %>
    <%= f.label :expires, "Let Task Expire After Selected Date" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>